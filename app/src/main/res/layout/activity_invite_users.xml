<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView to display instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select users to add to the group"
        android:textSize="18sp"
        android:paddingBottom="16dp"
        android:gravity="center" />

    <!-- RecyclerView to display list of users -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <!-- Button to send invitations -->
    <Button
        android:id="@+id/btnAddSelectedUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Users to Group"
        android:textColor="@android:color/white"
        />
</LinearLayout>
